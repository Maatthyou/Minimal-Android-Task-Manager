<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.dodo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="android:colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="colorAccent">@color/teal_700</item>
        <item name="android:colorAccent">@color/teal_700</item>
        <item name="android:navigationBarColor">@color/teal_700</item>


    </style>

    <style name="themeActivityCalender" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/blue_gray_900</item>
    </style>


    <style name="CustomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:navigationBarColor">@color/teal_700</item>

        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">

        <item name="colorPrimary">@color/teal_700</item>

    </style>
 <style name="CustomTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">

        <item name="colorPrimary">@color/teal_700</item>

    </style>



</resources>